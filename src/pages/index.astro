---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="CheatSheets Visualizer">
  <main class="min-h-screen flex flex-col items-center justify-center p-8">
    <div class="text-center max-w-2xl">
      <div class="text-8xl mb-6">ðŸ“š</div>
      
      <h1 class="text-5xl font-bold mb-4 bg-linear-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">
        CheatSheets Visualizer
      </h1>
      
      <p class="text-xl text-zinc-400 mb-8">
        Conocimiento estratificado para optimizar tu tiempo de estudio
      </p>
      
      <div class="flex justify-center gap-6 mb-12 text-sm">
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-red-500"></span>
          <span class="text-zinc-400">Esencial</span>
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-yellow-500"></span>
          <span class="text-zinc-400">Frecuente</span>
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-blue-500"></span>
          <span class="text-zinc-400">Referencia</span>
        </div>
      </div>
      
      <a 
        href="/topics" 
        class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-500 text-white font-semibold px-8 py-4 rounded-lg transition-colors"
      >
        Explorar Topics
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </main>
</BaseLayout>
